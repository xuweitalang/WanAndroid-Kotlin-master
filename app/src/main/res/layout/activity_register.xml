<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        tools:context=".user.activity.RegisterActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_register"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white" />

    <com.xing.wanandroid.widget.ClearEditText
            android:id="@+id/cet_register_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_bottom_border"
            android:hint="用户名"
            android:inputType="textPassword"
            app:clearIcon="@drawable/ic_close_gray"
            app:tipIcon="@drawable/ic_login_user" />

    <com.xing.wanandroid.widget.ClearEditText
            android:id="@+id/cet_register_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_bottom_border"
            android:hint="密码"
            android:inputType="textPassword"
            app:clearIcon="@drawable/ic_close_gray"
            app:tipIcon="@drawable/ic_login_password" />

    <com.xing.wanandroid.widget.ClearEditText
            android:id="@+id/cet_register_repassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_bottom_border"
            android:hint="确认密码"
            android:inputType="textPassword"
            app:clearIcon="@drawable/ic_close_gray"
            app:tipIcon="@drawable/ic_login_password" />

    <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/selector_btn_user"
            android:text="@string/register"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

</LinearLayout>