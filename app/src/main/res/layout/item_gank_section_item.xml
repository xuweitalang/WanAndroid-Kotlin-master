<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp">

        <com.xing.wanandroid.widget.RoundImageView
                android:id="@+id/iv_gank_icon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_android_dev" />

        <TextView
                android:id="@+id/tv_gank_who"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_gank_icon" />


        <TextView
                android:id="@+id/tv_gank_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

    </RelativeLayout>


    <TextView
            android:id="@+id/tv_gank_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:textColor="@color/black_f222"
            android:textSize="16sp" />


    <LinearLayout
            android:id="@+id/ll_gank_images_parent"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

        <com.xing.wanandroid.widget.RoundImageView
                android:id="@+id/iv_gank_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:radius="5dp"
                app:shape="rectangle" />

        <com.xing.wanandroid.widget.RoundImageView
                android:id="@+id/iv_gank_center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:radius="5dp"
                app:shape="rectangle" />

        <com.xing.wanandroid.widget.RoundImageView
                android:id="@+id/iv_gank_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:radius="5dp"
                app:shape="rectangle" />
    </LinearLayout>


</LinearLayout>